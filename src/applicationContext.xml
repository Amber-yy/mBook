<?xml version="1.0" encoding="UTF-8"?> 
<beans 
xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" 
xsi:schemaLocation="http://www.springframework.org/schema/beans 
					 http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">			        		 
 	   
	<!-- 对各dao进行依赖注入 -->
	 <bean id="userDao" class="org.dao.impl.UserDaoImpl" scope="prototype"></bean>
	 <bean id="bookDao" class="org.dao.impl.BookDaoImpl" scope="prototype"></bean>
	<!--对业务逻辑进行依赖注入  -->
    <bean id="userService" class="org.service.impl.UserServiceImpl" scope="prototype">
	<property name="userDao" ref="userDao"></property>
	</bean>
  
   <bean id="bookService" class="org.service.impl.BookServiceImpl" scope="prototype">
	<property name="bookDao" ref="bookDao"></property>
	</bean>
	
	<!-- 对显示层进行依赖注入 -->
    <bean id="loginRegistAction" class="org.action.LoginRegistAction"  scope="prototype">
	<property name="userService"  ref="userService"></property>
	</bean>
	<bean id="bookAction" class="org.action.BookAction"  scope="prototype">
	<property name="bookService"  ref="bookService"></property>
	</bean> 
	
	</beans>